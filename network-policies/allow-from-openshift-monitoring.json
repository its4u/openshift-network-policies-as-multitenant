{
  "apiVersion": "networking.k8s.io/v1",
  "kind": "NetworkPolicy",
  "metadata": {
    "name": "allow-from-openshift-monitoring",
    "annotations": {
      "openshift-network-policies-as-multitenant": "true"
    }
  },
  "spec": {
    "ingress": [
      {
        "from": [
          {
            "namespaceSelector": {
              "matchLabels": {
                "network.openshift.io/policy-group": "monitoring"
              }
            }
          }
        ]
      }
    ],
    "podSelector": {},
    "policyTypes": [
      "Ingress"
    ]
  }
}
